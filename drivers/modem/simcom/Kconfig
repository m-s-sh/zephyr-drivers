# SIM800L modem configuration
config MODEM_SIM800L
	bool "SIM800L Modem Driver"
	select MODEM_CONTEXT
	select MODEM_CMD_HANDLER
	select MODEM_IFACE_UART
	select MODEM_SOCKET
	select NET_OFFLOAD
	select NET_SOCKETS_OFFLOAD
	imply GPIO
	help
	  Enable support for SIM800L GSM/GPRS modem using modern modem framework.

	  The SIM800L is a GSM/GPRS module that supports:
	  - Quad-band GSM/GPRS connectivity
	  - AT command interface via UART
	  - CMUX multiplexing support
	  - PPP data connections
	  - Reset control via GPIO

if MODEM_SIM800L

config MODEM_SIM800L_LOG_LEVEL
	int "SIM800L modem log level"
	default 1
	help
	  Set the log level for SIM800L modem driver.
	  0 - None
	  1 - Error messages
	  2 - Warning messages
	  3 - Informational messages
	  4 - Debug messages

config MODEM_SIM800L_APN
	string "SIM800L APN"
	default "internet"
	help
	  Access Point Name (APN) for SIM800L modem data connection.
	  Leave empty if not required by your network provider.

endif # MODEM_SIM800L
